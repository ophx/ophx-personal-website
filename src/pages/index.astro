</Layout>

<script is:inline>
	const roles = ["\"developer\"", "psychedelic user", "dirt bike rider"];
	const typing = document.getElementById("typing");
	let roleIndex = 0;
	let charIndex = 0;
	let isDeleting = 0;
	const typingSpeed = 100;
	const deletingSpeed = 50;
	const pauseAfterTyping = 1500;
	const pauseBeforeTyping = 500;

	const typingEffect = () => {
		const currentText = roles[roleIndex];
		const visibleText = currentText.substring(0, charIndex);

		typing.textContent = visibleText;

		if (!isDeleting) {
			if (charIndex < currentText.length) {
				charIndex++;
				setTimeout(typingEffect, typingSpeed);
			} else {
				setTimeout(() => {
					isDeleting = true;
					typingEffect();
				}, pauseAfterTyping);
			}
		} else {
			if (charIndex > 0) {
				charIndex--;
				setTimeout(typingEffect, deletingSpeed);
			} else {
				isDeleting = false;
				roleIndex = (roleIndex + 1) % roles.length;
				setTimeout(typingEffect, pauseBeforeTyping);
			}
		}
	};

	setTimeout(typingEffect, pauseBeforeTyping);
</script>