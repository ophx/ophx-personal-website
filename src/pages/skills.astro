---
import Layout from "../layouts/Layout.astro";
import AnimatedScroll from "../components/AnimatedScroll";
import Navbar from "../components/Navbar.astro";
---

<style>
	.scrolling-wrapper {
        overflow-x: hidden;
    	width: 100%;
    }
	.scrolling-container {
		animation: scroll 20s linear infinite;
	}
	@keyframes scroll {
		0% {
			transform: translateX(100%);
		}
		100% {
			transform: translateX(-170%);
		}
	}
</style>

<Layout title="My Skills">
	<main class="flex h-screen">
		<div class="m-auto w-full">
			<!-- navbar -->
			<Navbar />

			<!-- hero -->
			<AnimatedScroll client:load>
				<div class="container px-32 p-4 mx-auto flex w-full">
					<div class="w-full">
						<div class="col-span-2 border-2 border-[#c084fc3b] bg-[#a955f71b] p-4 rounded-lg shadow-lg">
							<p class="text-white text-2xl font-medium text-center">My Skills</p>
							<p class="text-gray-300 text-center">Here is an overview of my skills and expertise across various domains.</p>
							<div class="border-b-2 border-[#c084fc3b] mx-auto w-24 mt-4 mb-4"></div>
							<div class="scrolling-wrapper">
								<div class="scrolling-container flex items-center gap-4">
									<div class="transition-all duriation-150 border-2 border-[#c084fc3b] bg-[#a955f71b] px-4 py-2 rounded-lg shadow-lg flex items-center gap-2">
										<div class="h-8 w-8">
											<img draggable="false" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/nextjs/nextjs-original.svg" class="h-8 w-8" />
										</div>
										<span class="text-white font-medium">NextJS</span>
									</div>
									<div class="transition-all duriation-150 border-2 border-[#c084fc3b] bg-[#a955f71b] px-4 py-2 rounded-lg shadow-lg flex items-center gap-2">
